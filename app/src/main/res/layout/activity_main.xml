<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:id="@+id/linear1"
    android:background="#673AB7"
    android:orientation="vertical"
    tools:context="com.example.android.mycalc1.MainActivity">



    <EditText
        android:id="@+id/display"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Values"
        android:editable="false"
        android:background="#ffffff"
        android:layout_marginBottom="10dp"
        android:paddingLeft="8dp"
        />

    <EditText
        android:id="@+id/dm"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Result"
        android:background="#ffffff"
        android:editable="false"
        android:layout_marginBottom="20dp"
        android:paddingLeft="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:orientation="horizontal"

        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/add"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="+"
            android:textSize="25dp"


            />
        <Button
            android:id="@+id/subtract"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textSize="25dp"


            />
        <Button
            android:id="@+id/multiply"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="*"
            android:textSize="25dp"



            />
        <Button
            android:id="@+id/divide"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="/"
            android:textSize="25dp"
            android:layout_marginRight="5dp"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3"
        android:orientation="horizontal"

        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/root"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="âˆš"
            android:textSize="22dp"


            />
        <Button
            android:id="@+id/exp"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:text="^"
            android:textSize="22dp"
            android:layout_marginRight="5dp"

            />
        <Button
            android:id="@+id/mod"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:text="mod"
            android:textSize="20dp"
            android:layout_below="@id/multiply"
            android:layout_marginTop="0dp"



            />

        <Button
            android:id="@+id/back"
            android:layout_width="75dp"
            android:layout_height="50dp"

            android:text="DEL"
            android:textSize="20dp"



            />




    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"

            android:text="1"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/one"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="2"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/two"
            android:layout_marginTop="5dp"
            android:layout_marginRight="19dp"
            android:text="3"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/clearb"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/three"
            android:layout_marginTop="5dp"

            android:text="C"
            android:textSize="25dp"
            />


        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"

            android:layout_below="@id/one"
            android:text="4"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/four"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/two"
            android:text="5"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/five"
            android:layout_marginTop="5dp"
            android:layout_marginRight="19dp"
            android:layout_below="@id/three"
            android:text="6"
            android:textSize="25dp"

            />



        <Button
            android:id="@+id/seven"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"

            android:layout_below="@id/four"
            android:text="7"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/seven"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/five"
            android:text="8"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/eight"
            android:layout_marginTop="5dp"
            android:layout_marginRight="19dp"
            android:layout_below="@id/six"
            android:text="9"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/decimal"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/six"
            android:layout_marginTop="5dp"

            android:layout_below="@id/clearb"
            android:text="."
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/answer"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/six"
            android:layout_marginTop="5dp"

            android:layout_below="@id/decimal"
            android:text="ANS"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/opbrac"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/seven"

            android:text="("
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/opbrac"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_below="@id/eight"
            android:text="0"
            android:textSize="25dp"

            />
        <Button
            android:id="@+id/clbrac"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/zero"
            android:layout_marginTop="5dp"
            android:layout_marginRight="19dp"
            android:layout_below="@id/nine"
            android:text=")"
            android:textSize="25dp"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/clbrac"
            android:layout_marginTop="5dp"

            android:layout_below="@id/answer"
            android:text="="
            android:textSize="25dp"
            />
    </RelativeLayout>




</LinearLayout>